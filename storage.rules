rules_version = '2';
 
service firebase.storage {
  match /b/{bucket}/o {
    // The path where images will be stored: {date}/{fileId}
    match /{date}/{fileId} {
 
      // READ access is allowed by the user who owns the images.
      allow read: if request.auth != null;
 
      // WRITE (upload) access is allowed only if all conditions are met:
      allow write: if
        // 1. User is authenticated
        request.auth != null &&
        // 2. File size is less than 5MB
        request.resource.size < 5 * 1024 * 1024 &&
        // 3. File is an image
        request.resource.contentType.matches('image/.*');
    }
  }
}